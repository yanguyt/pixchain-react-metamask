{
  "name": "@tropixinc/pixchain-react-metamask",
  "version": "2.5.0",
  "description": "Blockchain signing library",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "scripts": {
    "check": "npm run check-types && npm run lint && npm run build",
    "check-types": "tsc --incremental false --noEmit",
    "lint": "eslint 'src/**/*.{ts,tsx}' --quiet --fix",
    "format": "prettier --write \"src/**/*.ts?(x)\"",
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir lib/cjs",
    "prepublishOnly": "npm run build",
    "package": "npm run build && npm pack",
    "addscope": "node tools/packagejson name @tropixinc/pixchain-react-metamask",
    "clean": "node tools/cleanup",
    "release": "standard-version",
    "git:add": "git add --all",
    "git:commit": "git-cz",
    "git": "npm run git:add && npm run git:commit",
    "prepare": "husky install"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@types/lodash": "4.14.178",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "5.10.1",
    "@typescript-eslint/parser": "^5.10.2",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.6.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.28.0",
    "eslint-plugin-react-hooks": "4.3.0",
    "eslint-plugin-sonarjs": "0.11.0",
    "husky": "7.0.4",
    "lint-staged": "12.1.7",
    "prettier": "2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "standard-version": "9.3.2",
    "typescript": "4.5.4"
  },
  "files": [
    "/lib"
  ],
  "dependencies": {
    "@usedapp/core": "0.9.0",
    "axios": "0.24.0",
    "dayjs": "1.10.7",
    "immer": "9.0.12",
    "p-memoize": "4.0.3",
    "swr": "1.1.2"
  },
  "license": "MIT",
  "author": "Mario Costa <mario@tropix.io>",
  "repository": {
    "url": "https://github.com/TropixInc/pixchain-react-metamask"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}